	<tr class="row0">
		<th class="col0 leftalign">等级  </th><td class="col1 centeralign">  1  </td><td class="col2 centeralign">  2  </td><td class="col3 centeralign">  3  </td><td class="col4 centeralign">  4  </td><td class="col5 centeralign">  5  </td><td class="col6 centeralign">  6+  </td>
	</tr>
	<tr class="row1">
